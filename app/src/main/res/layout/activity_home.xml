<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Activity">

    <Button
        android:id="@+id/bluetooth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="150dp"
        android:text="@string/bluetoothbt"
        app:icon="@android:drawable/ic_lock_idle_low_battery"
        app:iconPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loc_button"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/loc_btn"
        app:icon="@android:drawable/ic_dialog_map"
        app:iconPadding="10dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/bluetooth_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bluetooth_button"
        app:layout_constraintTop_toBottomOf="@+id/bluetooth_button" />
</androidx.constraintlayout.widget.ConstraintLayout>